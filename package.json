{
  "name": "@choice-ui/react-monorepo",
  "version": "0.1.8",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "components:build": "pnpm --filter=\"./packages/core/app/components/**\" run build",
    "docs:build": "pnpm --filter=\"@choice-ui/design-docs\" run build",
    "docs:dev": "pnpm --filter=\"@choice-ui/design-docs\" run dev",
    "docs:generate": "tsx packages/docs/scripts/generate-from-stories.ts",
    "storybook:dev": "pnpm --filter=\"@choice-ui/storybook\" run dev",
    "storybook:build": "pnpm --filter=\"@choice-ui/storybook\" run build-storybook",
    "core:build": "pnpm --filter=\"@choice-ui/react\" run build",
    "core:lint": "eslint packages/core/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "core:lint:fix": "eslint packages/core/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:core": "vitest run packages/core",
    "test:colors": "vitest run packages/colors",
    "test:calendar": "vitest run packages/calendar",
    "test:text-editor": "vitest run packages/text-editor",
    "clean": "pnpm --filter=\"./packages/**\" run clean",
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.29.4",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.6.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "pnpm": {
    "overrides": {
      "eslint-import-resolver-typescript": "3.6.1",
      "unrs-resolver": "npm:file-exists@^1.0.0"
    }
  }
}
