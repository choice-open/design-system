{
  "name": "@choiceform/design-system-monorepo",
  "version": "0.1.8",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter=\"./packages/**\" --parallel run dev",
    "build": "pnpm --filter=\"./packages/**\" run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "core:dev": "pnpm --filter=\"@choiceform/design-system\" run dev",
    "core:build": "pnpm --filter=\"@choiceform/design-system\" run build",
    "core:storybook": "pnpm --filter=\"@choiceform/design-system\" run storybook",
    "core:lint": "eslint packages/core/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "core:lint:fix": "eslint packages/core/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "colors:dev": "pnpm --filter=\"@choiceform/colors\" run dev",
    "colors:build": "pnpm --filter=\"@choiceform/colors\" run build",
    "colors:storybook": "pnpm --filter=\"@choiceform/colors\" run storybook",
    "colors:lint": "eslint packages/colors/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "colors:lint:fix": "eslint packages/colors/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "calendar:dev": "pnpm --filter=\"@choiceform/calendar\" run dev",
    "calendar:build": "pnpm --filter=\"@choiceform/calendar\" run build",
    "calendar:storybook": "pnpm --filter=\"@choiceform/calendar\" run storybook",
    "calendar:lint": "eslint packages/calendar/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "calendar:lint:fix": "eslint packages/calendar/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "docs:dev": "pnpm --filter=\"@design-system/docs\" run dev",
    "docs:build": "pnpm --filter=\"@design-system/docs\" run build",
    "text-editor:dev": "pnpm --filter=\"@choiceform/text-editor\" run dev",
    "text-editor:build": "pnpm --filter=\"@choiceform/text-editor\" run build",
    "text-editor:storybook": "pnpm --filter=\"@choiceform/text-editor\" run storybook",
    "text-editor:lint": "eslint packages/text-editor/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "text-editor:lint:fix": "eslint packages/text-editor/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "ai-assistant:dev": "pnpm --filter=\"@choiceform/ai-assistant\" run dev",
    "ai-assistant:build": "pnpm --filter=\"@choiceform/ai-assistant\" run build",
    "ai-assistant:storybook": "pnpm --filter=\"@choiceform/ai-assistant\" run storybook",
    "ai-assistant:lint": "eslint packages/ai-assistant/app/**/*.{ts,tsx} --ext .ts,.tsx",
    "ai-assistant:lint:fix": "eslint packages/ai-assistant/app/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:core": "vitest run packages/core",
    "test:colors": "vitest run packages/colors",
    "test:calendar": "vitest run packages/calendar",
    "test:text-editor": "vitest run packages/text-editor",
    "clean": "pnpm --filter=\"./packages/**\" run clean",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}
