{
  "name": "@choiceform/design-system-monorepo",
  "version": "0.1.7",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter=\"./packages/**\" --parallel run dev",
    "build": "pnpm --filter=\"./packages/**\" run build",
    "lint": "pnpm --filter=\"./packages/**\" run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "core:dev": "pnpm --filter=\"@choiceform/design-system\" run dev",
    "core:build": "pnpm --filter=\"@choiceform/design-system\" run build",
    "storybook": "pnpm --filter=\"@choiceform/design-system\" run storybook",
    "test": "pnpm --filter=\"./packages/**\" run test",
    "clean": "pnpm --filter=\"./packages/**\" run clean",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.10.0"
}
