{
  "name": "@choice-ui/react",
  "version": "1.3.10",
  "description": "A desktop-first React UI component library built for professional desktop applications with comprehensive documentation",
  "sideEffects": false,
  "type": "module",
  "source": "./app/index.ts",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./app/index.ts",
  "files": [
    "dist",
    "README.md",
    "llms.txt"
  ],
  "exports": {
    ".": {
      "types": "./app/index.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./tailwind.css": "./dist/tailwind.css",
    "./llms.txt": "./dist/llms.txt"
  },
  "publishConfig": {
    "access": "public",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.cjs",
        "default": "./dist/esm/index.js"
      },
      "./styles/*": "./dist/styles/*",
      "./tailwind.css": "./dist/tailwind.css",
      "./llms.txt": "./dist/llms.txt"
    }
  },
  "scripts": {
    "build": "pnpm run clean && vite build && tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:types": "tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build",
    "plop": "pnpm dlx plop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "madge": "npx madge --circular --extensions ts app/"
  },
  "dependencies": {
    "@choiceform/icons-react": "^1.3.8",
    "@choice-ui/design-tokens": "workspace:*",
    "@date-fns/tz": "^1.2.0",
    "@floating-ui/react": "0.27.15",
    "@legendapp/state": "v3.0.0-beta.26",
    "@tanstack/react-form": "^1.14.1",
    "@tanstack/react-virtual": "^3.13.12",
    "ahooks": "^3.8.0",
    "allotment": "^1.20.4",
    "date-fns": "^4.1.0",
    "es-toolkit": "^1.13.1",
    "fractional-indexing-jittered": "^1.0.0",
    "framer-motion": "^11",
    "is-hotkey": "^0.2.0",
    "lodash-es": "^4.17.21",
    "marked": "^15.0.7",
    "nanoid": "^5.0.7",
    "slate": "^0.118.1",
    "slate-history": "^0.113.1",
    "slate-hyperscript": "^0.100.0",
    "slate-react": "^0.117.4",
    "sonner": "^2.0.7",
    "tinycolor2": "1.6.0",
    "usehooks-ts": "^3.1.0",
    "zod": "^4.0.5",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.1",
    "remark-breaks": "^4.0.0",
    "remark-math": "^6.0.0",
    "harden-react-markdown": "^1.0.4",
    "shiki": "^3.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-query": "^5.83.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/is-hotkey": "^0.1.10",
    "@types/jest": "^29.5.14",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "plop": "^4.0.1",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "4.1.13",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
