{
  "name": "@choiceform/design-system",
  "version": "1.0.9",
  "description": "A modern React UI component library - Figma-inspired design system with comprehensive documentation",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "llms.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./tailwind.css": "./dist/tailwind.css",
    "./llms.txt": "./dist/llms.txt"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "pnpm run clean && vite build && tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:types": "tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "NODE_OPTIONS='--max-old-space-size=4096' storybook build",
    "plop": "pnpm dlx plop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
    "test:generate-watch": "jest --json --outputFile=.jest-test-results.json --watch",
    "prestorybook": "pnpm run test:generate-output"
  },
  "dependencies": {
