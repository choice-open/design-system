{
  "name": "@choiceform/rich-input",
  "version": "0.0.2",
  "description": "Rich Input component for Choiceform Design System",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@floating-ui/react": "0.27.15",
    "framer-motion": "^11",
    "slate": "^0.120.0",
    "slate-react": "^0.120.0",
    "slate-history": "^0.113.1",
    "slate-hyperscript": "^0.100.0",
    "ts-pattern": "^5.9.0",
    "usehooks-ts": "^3.1.1",
    "lodash-es": "^4.17.21",
    "@choiceform/button": "workspace:*",
    "@choiceform/design-shared": "workspace:*",
    "@choiceform/icon-button": "workspace:*",
    "@choiceform/icons-react": "^1.3.8",
    "@choiceform/link-button": "workspace:*",
    "@choiceform/scroll-area": "workspace:*",
    "@choiceform/text-field": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
