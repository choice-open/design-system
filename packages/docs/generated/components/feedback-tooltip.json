    {
      "id": "feedback-tooltip--default",
      "name": "Default",
      "exportName": "Default",
      "description": "",
      "source": "import { TooltipTrigger, TooltipContent, Tooltip } from \"@choice-ui/tooltip\"\n\nexport default function App() {\n  return (\n    <Tooltip>\n      <TooltipTrigger>\n        <Button>Hover me</Button>\n      </TooltipTrigger>\n      <TooltipContent>This is a tooltip</TooltipContent>\n    </Tooltip>\n  );\n}"
    },
    {
      "id": "feedback-tooltip--placements",
      "name": "Placements",
      "exportName": "Placements",
      "description": "",
      "source": "import { TooltipTrigger, TooltipContent, Tooltip } from \"@choice-ui/tooltip\"\n\nexport default function App() {\n  return (\n    <div className=\"space-y-8\">\n      {/* 顶部排列 */}\n      <div className=\"flex items-center justify-center gap-4\">\n        <Tooltip placement=\"top-start\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Top Start</Button>\n          </TooltipTrigger>\n          <TooltipContent>Top start placement</TooltipContent>\n        </Tooltip>\n\n        <Tooltip placement=\"top\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Top</Button>\n          </TooltipTrigger>\n          <TooltipContent>Top placement</TooltipContent>\n        </Tooltip>\n\n        <Tooltip placement=\"top-end\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Top End</Button>\n          </TooltipTrigger>\n          <TooltipContent>Top end placement</TooltipContent>\n        </Tooltip>\n      </div>\n\n      {/* 中间排列 */}\n      <div className=\"flex items-center justify-between\">\n        {/* 左侧 */}\n        <div className=\"flex flex-col gap-4\">\n          <Tooltip placement=\"left-start\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Left Start\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Left start placement</TooltipContent>\n          </Tooltip>\n\n          <Tooltip placement=\"left\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Left\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Left placement</TooltipContent>\n          </Tooltip>\n\n          <Tooltip placement=\"left-end\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Left End\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Left end placement</TooltipContent>\n          </Tooltip>\n        </div>\n\n        {/* 中心元素 */}\n        <div className=\"flex items-center justify-center\">\n          <div className=\"rounded-xl border-2 border-dashed border-gray-300 p-8\">\n            <span className=\"text-gray-500\">Hover around buttons to see tooltips</span>\n          </div>\n        </div>\n\n        {/* 右侧 */}\n        <div className=\"flex flex-col gap-4\">\n          <Tooltip placement=\"right-start\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Right Start\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Right start placement</TooltipContent>\n          </Tooltip>\n\n          <Tooltip placement=\"right\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Right\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Right placement</TooltipContent>\n          </Tooltip>\n\n          <Tooltip placement=\"right-end\">\n            <TooltipTrigger>\n              <Button\n                variant=\"secondary\"\n                className=\"h-16\"\n              >\n                Right End\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Right end placement</TooltipContent>\n          </Tooltip>\n        </div>\n      </div>\n\n      {/* 底部排列 */}\n      <div className=\"flex items-center justify-center gap-4\">\n        <Tooltip placement=\"bottom-start\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Bottom Start</Button>\n          </TooltipTrigger>\n          <TooltipContent>Bottom start placement</TooltipContent>\n        </Tooltip>\n\n        <Tooltip placement=\"bottom\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Bottom</Button>\n          </TooltipTrigger>\n          <TooltipContent>Bottom placement</TooltipContent>\n        </Tooltip>\n\n        <Tooltip placement=\"bottom-end\">\n          <TooltipTrigger>\n            <Button variant=\"secondary\">Bottom End</Button>\n          </TooltipTrigger>\n          <TooltipContent>Bottom end placement</TooltipContent>\n        </Tooltip>\n      </div>\n    </div>\n  );\n}"
    },
    {
      "id": "feedback-tooltip--delay-group",
      "name": "Delay Group",
      "exportName": "DelayGroup",
      "description": "",
      "source": "import { TooltipTrigger, TooltipContent, TooltipProvider, Tooltip } from \"@choice-ui/tooltip\"\n\nexport default function App() {\n  return (\n    <div className=\"space-y-8\">\n      <div>\n        <h3 className=\"font-strong mb-4\">With DelayGroup</h3>\n        <p className=\"text-body-small mb-4 text-gray-600\">\n          Hover over the first button and wait 200ms for tooltip to appear.\n          <br />\n          Then quickly move to other buttons - they should appear instantly!\n        </p>\n        <div className=\"flex gap-4\">\n          <TooltipProvider\n            delay={{\n              open: 400,\n              close: 200,\n            }}\n          >\n            <Tooltip>\n              <TooltipTrigger>\n                <Button>First</Button>\n              </TooltipTrigger>\n              <TooltipContent>First tooltip - 200ms delay initially</TooltipContent>\n            </Tooltip>\n            <Tooltip>\n              <TooltipTrigger>\n                <Button>Second</Button>\n              </TooltipTrigger>\n              <TooltipContent>Second tooltip - instant when moving from first</TooltipContent>\n            </Tooltip>\n            <Tooltip>\n              <TooltipTrigger>\n                <Button>Third</Button>\n              </TooltipTrigger>\n              <TooltipContent>Third tooltip - instant when moving from others</TooltipContent>\n            </Tooltip>\n          </TooltipProvider>\n        </div>\n      </div>\n    </div>\n  );\n}"
    },
    {
      "id": "feedback-tooltip--variants",
      "name": "Variants",
      "exportName": "Variants",
      "description": "",
      "source": "import { TooltipTrigger, TooltipContent, TooltipProvider, Tooltip } from \"@choice-ui/tooltip\"\n\nexport default function App() {\n  return (\n    <TooltipProvider\n      delay={{\n        open: 400,\n        close: 200,\n      }}\n    >\n      <div className=\"grid grid-cols-4 gap-4\">\n        {[\"default\", \"light\"].map((variant) =>\n          [\"right\", \"left\", \"top\", \"bottom\"].map((placement) => (\n            <Tooltip\n              key={`${placement}-${variant}`}\n              placement={placement as Placement}\n            >\n              <TooltipTrigger>\n                <Button variant=\"secondary\">\n                  {placement} / {variant}\n                </Button>\n              </TooltipTrigger>\n              <TooltipContent variant={variant as \"default\" | \"light\"}>\n                {placement} / {variant}\n              </TooltipContent>\n            </Tooltip>\n          )),\n        )}\n      </div>\n    </TooltipProvider>\n  );\n}"
    },
    {
      "id": "feedback-tooltip--shortcut",
      "name": "Shortcut",
      "exportName": "Shortcut",
      "description": "Shows how to use the `shortcut` prop to add keyboard shortcuts to a tooltip.\n\n### Features\n- Display keyboard shortcuts\n- Support for modifier keys\n\n### Usage\n```tsx\n<Tooltip\n  content=\"This is a tooltip\"\n  shortcut={{ modifier: [\"command\"], keys: \"K\" }}\n>\n  <Button>Tooltip</Button>\n</Tooltip>\n```",
      "source": "import { TooltipProvider, Tooltip } from \"@choice-ui/tooltip\"\n\nexport default function App() {\n  return (\n    <TooltipProvider\n      delay={{\n        open: 400,\n        close: 200,\n      }}\n    >\n      <div className=\"flex gap-4\">\n        <Tooltip\n          content=\"Save file\"\n          shortcut={{ modifier: [\"command\"], keys: \"K\" }}\n        >\n          <Button variant=\"secondary\">Command + K</Button>\n        </Tooltip>\n\n        <Tooltip\n          content=\"Select all\"\n          shortcut={{ modifier: [\"ctrl\"], keys: \"A\" }}\n        >\n          <Button variant=\"secondary\">Ctrl + A</Button>\n        </Tooltip>\n\n        <Tooltip\n          content=\"Shift\"\n          shortcut={{ modifier: [\"shift\"], keys: \"A\" }}\n        >\n          <Button variant=\"secondary\">Shift + A</Button>\n        </Tooltip>\n      </div>\n    </TooltipProvider>\n  );\n}"
    }
  ]
